---
import { Image } from 'astro:assets';
import avatarImage from '../assets/avatar.webp';
---

<section class="relative min-h-screen flex items-center py-20 overflow-hidden bg-white">
    <!-- Fond avec dégradé subtil -->
    <div class="absolute inset-0 bg-gradient-to-br from-white to-gray-50"></div>
    
    <!-- Formes décoratives -->
    <div class="absolute -left-20 top-20 w-96 h-96 bg-purple-100/30 rounded-[30%_70%_70%_30%/30%_30%_70%_70%] will-change-transform"></div>
    <div class="absolute -right-20 bottom-20 w-96 h-96 bg-gray-100/50 rounded-[70%_30%_30%_70%/60%_40%_60%_40%] will-change-transform"></div>
    
    <!-- Lignes géométriques -->
    <div class="absolute inset-0">
        <div class="absolute top-20 left-10 w-32 h-32 border border-gray-200 rounded-xl rotate-45"></div>
        <div class="absolute bottom-20 right-10 w-40 h-40 border border-gray-200 rounded-xl -rotate-12"></div>
        <div class="absolute top-1/2 left-1/2 w-60 h-60 border border-gray-100 rounded-full transform -translate-x-1/2 -translate-y-1/2"></div>
    </div>

    <div class="container mx-auto px-4 relative">
        <div class="max-w-6xl mx-auto">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                <!-- Texte -->
                <div class="text-center lg:text-left">
                    <div class="inline-block px-4 py-2 rounded-full bg-purple-50 text-purple-700 text-sm mb-6">
                        Expert Shopify
                    </div>
                    <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
                        Développeur & Consultant <span class="text-purple-600">Shopify</span>
                    </h1>
                    <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
                        Je crée et customise vos boutiques Shopify pour une expérience e-commerce unique.
                    </p>
                    <div class="flex flex-wrap gap-4 justify-center lg:justify-start">
                        <a href="#contact" class="px-8 py-4 rounded-[1rem_2rem_2rem_3rem/2rem_3rem_2rem_3rem] bg-purple-600 text-white font-semibold hover:bg-purple-700 transition-colors">
                            Me contacter
                        </a>
                        <a href="#projets" class="px-8 py-4 rounded-[2rem_1rem_3rem_2rem/2rem_3rem_2rem_3rem] bg-white text-gray-700 border border-gray-200 hover:bg-gray-50 transition-colors">
                            Voir mes projets
                        </a>
                    </div>
                </div>

                <!-- Image -->
                <div class="relative">
                    <div class="relative z-10 rounded-[3rem_5rem_6rem_4rem/4rem_6rem_5rem_5rem] overflow-hidden bg-gradient-to-br from-purple-100 to-purple-50 p-[2px]">
                        <div class="rounded-[3rem_5rem_6rem_4rem/4rem_6rem_5rem_5rem] overflow-hidden bg-white">
                            <Image 
                                src={avatarImage}
                                alt="" 
                                width={600} 
                                height={600}
                                class="w-full h-auto"
                            />
                        </div>
                    </div>
                    <!-- Éléments décoratifs autour de l'image -->
                    <div class="absolute -top-4 -right-4 w-32 h-32 bg-purple-100/50 rounded-full"></div>
                    <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-gray-100/80 rounded-full"></div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes morph {
        0% {
            border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
        }
        50% {
            border-radius: 70% 30% 30% 70% / 60% 40% 60% 40%;
        }
        100% {
            border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
        }
    }

    @keyframes subtle-morph {
        0% {
            border-radius: 3rem 5rem 6rem 4rem / 4rem 6rem 5rem 5rem;
        }
        50% {
            border-radius: 5rem 4rem 5rem 6rem / 6rem 5rem 4rem 3rem;
        }
        100% {
            border-radius: 3rem 5rem 6rem 4rem / 4rem 6rem 5rem 5rem;
        }
    }

    .animate-morph {
        animation: morph 15s ease-in-out infinite;
    }

    .animate-subtle-morph {
        animation: subtle-morph 8s ease-in-out infinite;
    }

    .animation-delay-2000 {
        animation-delay: 2s;
    }
</style>
