---
import { Image } from 'astro:assets';
import avatarImage from '../assets/avatar.webp';
---

<section class="relative min-h-[70vh] flex items-center py-12 overflow-hidden">
    <!-- Fond professionnel avec dégradé moderne -->
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900 to-gray-800"></div>
    
    <!-- Overlay avec effet de grain subtil pour texture professionnelle -->
    <div class="absolute inset-0 opacity-20 mix-blend-overlay bg-[url('/noise.png')]"></div>
    
    <!-- Effet de lumière subtil -->
    <div class="absolute top-0 left-1/4 w-1/2 h-1/2 bg-purple-500/10 blur-[100px] rounded-full"></div>
    


    <div class="container mx-auto px-4 relative">
        <div class="max-w-6xl mx-auto">
            <div class="flex justify-center items-center">
                <!-- Texte -->
                <div class="text-center max-w-3xl mx-auto">
                    <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
                        Développeur Freelance <span class="text-purple-400">Shopify</span>
                    </h1>
                    <p class="text-xl text-gray-300 max-w-3xl mx-auto mb-8">
                        Je crée et customise vos boutiques Shopify pour une expérience e-commerce unique.
                    </p>
                    <div class="flex flex-wrap gap-4 justify-center">
                        <a href="#contact" class="px-8 py-4 rounded-[1rem_2rem_2rem_3rem/2rem_3rem_2rem_3rem] bg-purple-500 text-white font-semibold hover:bg-purple-400 transition-colors">
                            Me contacter
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


