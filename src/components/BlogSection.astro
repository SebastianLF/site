---
// Utiliser les mêmes données d'articles que sur la page blog principale
const articles = [
    {
        title: "Comprendre Liquid : Le langage de template de Shopify",
        excerpt: "Découvrez Liquid, le langage de template qui permet de créer des thèmes Shopify dynamiques. Guide complet avec exemples de code et bonnes pratiques.",
        date: "2025-02-05",
        slug: "comprendre-liquid-shopify",
        readTime: "5 min",
        image: "https://images.unsplash.com/photo-1627398242454-45a1465c2479?auto=format&fit=crop&w=800&q=80"
    },
    {
        title: "Comment optimiser votre boutique Shopify pour les performances",
        excerpt: "Découvrez les meilleures pratiques pour améliorer la vitesse de chargement de votre boutique Shopify et augmenter vos conversions.",
        date: "2025-01-20",
        slug: "optimiser-boutique-shopify-performances",
        readTime: "5 min",
        image: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?auto=format&fit=crop&w=800&q=80"
    },
    {
        title: "Les tendances e-commerce à suivre en 2025",
        excerpt: "Le commerce électronique évolue rapidement. Voici les tendances qui façonneront l'année 2025 et comment les intégrer à votre boutique Shopify.",
        date: "2025-01-15",
        slug: "tendances-ecommerce-2025",
        readTime: "4 min",
        image: "https://images.unsplash.com/photo-1516321318423-f06f85e504b3?auto=format&fit=crop&w=800&q=80"
    },
    {
        title: "Guide complet des applications Shopify essentielles",
        excerpt: "Une sélection des meilleures applications pour améliorer votre boutique Shopify et maximiser vos ventes.",
        date: "2025-01-10",
        slug: "guide-applications-shopify",
        readTime: "6 min",
        image: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?auto=format&fit=crop&w=800&q=80"
    }
];
---

<section class="relative py-32 overflow-hidden bg-white">
    <!-- Fond avec motif de lignes -->
    <div class="absolute inset-0 bg-gradient-to-br from-white to-gray-50"></div>
    <div class="absolute inset-0 opacity-[0.03]" 
        style="background-image: repeating-linear-gradient(45deg, rgb(147,51,234,0.1) 0px, rgb(147,51,234,0.1) 1px, transparent 1px, transparent 10px);">
    </div>

    <!-- Formes décoratives -->
    <div class="absolute top-0 left-0 w-1/3 h-1/3 bg-gradient-to-br from-purple-100/20 to-transparent"></div>
    <div class="absolute bottom-0 right-0 w-1/3 h-1/3 bg-gradient-to-tl from-gray-100/30 to-transparent"></div>

    <div class="container mx-auto px-4 relative">
        <div class="max-w-7xl mx-auto">
            <!-- En-tête -->
            <div class="text-center mb-20">
                <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-purple-50 text-purple-700 text-sm mb-6">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2.5 2.5 0 00-2.5-2.5H14" />
                    </svg>
                    Blog & Ressources
                </div>
                <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
                    Conseils et <span class="text-purple-600">astuces</span> Shopify
                </h2>
                <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                    Découvrez mes derniers articles pour booster votre boutique
                </p>
            </div>

            <!-- Grille d'articles -->
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                {articles.map((article, index) => (
                    <article class="bg-white rounded-2xl shadow-sm hover:shadow-md transition-shadow border border-purple-100/50 overflow-hidden">
                        <a href={`/blog/${article.slug}`} class="block h-full">
                            <div class="aspect-video relative overflow-hidden">
                                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent z-10"></div>
                                <img 
                                    src={article.image} 
                                    alt={article.title}
                                    class="w-full h-full object-cover"
                                    loading="lazy"
                                    decoding="async"
                                />
                            </div>
                            <div class="p-6">
                                <div class="flex items-center text-sm text-purple-600 mb-3">
                                    <time datetime={article.date}>
                                        {new Date(article.date).toLocaleDateString('fr-FR', {
                                            year: 'numeric',
                                            month: 'long',
                                            day: 'numeric'
                                        })}
                                    </time>
                                    <span class="mx-2">•</span>
                                    <span>{article.readTime} de lecture</span>
                                </div>
                                
                                <h3 class="text-xl font-bold mb-3 text-gray-900 group-hover:text-purple-600">
                                    {article.title}
                                </h3>
                                
                                <p class="text-gray-600 mb-4 text-sm">
                                    {article.excerpt}
                                </p>
                                
                                <div class="inline-flex items-center text-purple-600 font-medium text-sm">
                                    Lire l'article
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                                    </svg>
                                </div>
                            </div>
                        </a>
                    </article>
                ))}
            </div>

            <!-- Bouton d'action -->
            <div class="text-center mt-16">
                <a href="/blog" class="group inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-purple-600 to-purple-700 text-white rounded-full">
                    <span>Voir tous les articles</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                    </svg>
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
